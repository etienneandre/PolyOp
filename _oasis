  Path:       .
  BuildTools: ocamlbuild
  MainIs:     src/PolyOp.ml
  BuildDepends: gmp, extlib, ppl, str, unix, threads
  CCLib: -static '-lppl -ltinfo -lppl_ocaml -lstdc++ -lgmp -lgmpxx'

  CompiledObject: best


